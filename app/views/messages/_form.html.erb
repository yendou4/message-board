<%= form_for(@message, html: { class: "form-horizontal"}) do |f| %>

<% if @message.errors.present? %>

  <div class="alert alert-danger">

<%= alert %>

     <ul>
         
<% @message.errors.full_messages.each do |full_message| %>

         <li>

<%= full_message %>

         </li>
<% end %>

     </ul>
        
  </div>

<% end %>

  <div class="form-group">
    <label class="control-label col-sm-3" for="message_name">Your name（氏名）→</label>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-3" for="message_body">Contents（内容）→</label>      
  　<div class="col-sm-9">
      <%= f.text_area :body, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-3" for="message_age">age（年齢）→</label>
    <div class="col-sm-2">
      <%= f.text_field :age, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Please Click:</label>
    <div class="col-sm-3">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  
<% end %>






