<%= form_for(@message, html: { class: "form-horizontal"}) do |f| %>

<% if @message.errors.present? %>

  <div class="alert alert-danger">

<%= alert %>

     <ul>
         
<% @message.errors.full_messages.each do |full_message| %>

         <li>

<%= full_message %>

         </li>
<% end %>

     </ul>
        
  </div>

<% end %>

  <div class="form-group">
    <label class="control-label col-sm-3" for="message_name">Your name →</label>
    <div class="col-sm-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-3" for="message_name">Contents →</label>      
  　<div class="col-sm-7">
      <%= f.text_area :body, class:"form-control"%>
    </div>
  </div>
  
  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
              <label>
                  <input type="checkbox">Remember me?
              </label>
          </div>
      </div>
  </div>
  
  <div class="form-group">
    <label class="control-label col-sm-4" for="message_name">Please Click:</label>
    <div class="col-sm-3">
     <%= f.submit class: "btn btn-lg btn-primary" %>
    </div>
  </div>
  
<% end %>






